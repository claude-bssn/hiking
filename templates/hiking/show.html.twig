{% extends "base.html.twig" %}
{% block main %}
	<ul>
		{% for hike in hikes %}
			<div class="card">
				<div class="pic">
					<img src={{ asset(hike.pic) }} halt="">
				</div>
				<div class="info">
					<h2>{{hike.title}}</h2>
					<h4>Lieu: <span>{{hike.town}}</span></h4>
					<h4>Distance: <span>{{hike.distance}}</h4>
					<h4>Dénivelé: <span>{{hike.hight}}</h4>
					<h4>Type: <span>{{hike.type}}</h4>
					<h4>Difficulté: <span>{{hike.difficulty}} </h4>

				</div>
				<div class="btn">
					<button>Voir</button>
					<button>Modifier</button>
					<button>Télécharger</button>

				</div>

			
			</div>
		{% endfor %}
	</ul>

{% endblock %}
